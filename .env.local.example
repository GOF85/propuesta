# Database Configuration (Local MariaDB)
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASS=root
DB_NAME=catering_proposals

# Application Configuration
APP_DOMAIN=http://localhost:3000
SESSION_SECRET=dev-secret-key-do-not-use-in-production
PORT=3000
NODE_ENV=development

# Email Configuration (Gmail - Use App Password)
# Crear password en: https://myaccount.google.com/apppasswords
EMAIL_USER=your_gmail@gmail.com
EMAIL_PASS=xxxx xxxx xxxx xxxx

# Puppeteer Configuration
PUPPETEER_NO_SANDBOX=true
PUPPETEER_HEADLESS=true

{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "semi": ["warn", "always"],
    "quotes": ["warn", "single"],
    "indent": ["warn", 2],
    "comma-dangle": ["warn", "always-multiline"],
    "object-curly-spacing": ["warn", "always"]
  }
}

<style>
  #venue-form-modal {
    animation: slideIn 0.3s ease-out;
  }

  @keyframes slideIn {
    from {
      opacity: 0;
      transform: scale(0.95);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  .form-group {
    @apply mb-4;
  }

  .form-group label {
    @apply block text-sm font-medium text-gray-700 mb-1;
  }

  .form-group input,
  .form-group textarea,
  .form-group select {
    @apply w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500;
  }

  .form-group textarea {
    @apply resize-vertical;
  }
</style>

<div id="venue-form-modal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4">
  <div class="bg-white rounded-lg shadow-xl w-full max-w-2xl max-h-screen overflow-y-auto">
    <!-- Header Modal -->
    <div class="sticky top-0 bg-gradient-to-r from-blue-600 to-blue-700 text-white p-4 flex justify-between items-center">
      <h2 id="form-title" class="text-xl font-bold flex items-center gap-2">
        <i data-lucide="building-2" class="w-5 h-5"></i> <span>Crear Venue</span>
      </h2>
      <button onclick="closeVenueForm()" class="text-2xl hover:text-blue-100 transition">
        âœ•
      </button>
    </div>

    <!-- Formulario -->
    <div class="p-6">
      <form id="venue-form" onsubmit="submitVenueForm(event)">
        
        <!-- SECCIÃ“N: InformaciÃ³n BÃ¡sica (Solo nombre y URL) -->
        <fieldset class="mb-6">
          <legend class="text-lg font-bold text-gray-800 mb-4">
            InformaciÃ³n del Venue
          </legend>
          <p class="text-sm text-gray-600 mb-4">
            Proporciona el nombre y URL. El resto de datos se cargarÃ¡n automÃ¡ticamente al scrapear.
          </p>

          <div class="form-group">
            <label for="venue-name">
              Nombre <span class="text-red-500">*</span>
            </label>
            <input type="text" id="venue-name" name="name" required
                   placeholder="Ej: Gran Hotel Ballroom, Madrid">
          </div>

          <div class="form-group">
            <label for="venue-external-url">
              URL <span class="text-red-500">*</span>
            </label>
            <input type="url" id="venue-external-url" name="external_url" required
                   placeholder="https://www.ejemplo.com/venue">
            <p class="text-xs text-gray-500 mt-1">
              La URL serÃ¡ scrappeada para obtener descripciÃ³n, imÃ¡genes y capacidades
            </p>
          </div>
        </fieldset>

        <!-- Botones de AcciÃ³n -->
        <div class="flex gap-3 justify-end pt-4 border-t">
          <button type="button" onclick="closeVenueForm()"
                  class="px-4 py-2 bg-gray-200 hover:bg-gray-300 text-gray-800 rounded transition font-medium flex items-center gap-2">
            <i data-lucide="x" class="w-4 h-4"></i> <span>Cancelar</span>
          </button>

          <button type="submit"
                  class="px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded transition font-medium inline-flex items-center gap-2">
            <span id="submit-icon">âœ”ï¸</span>
            <span id="submit-text">Guardar Venue</span>
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
  // MODAL CONTROL
  // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

  let formMode = 'new';
  let editingVenueId = null;

  function openVenueForm(mode = 'new', venueId = null) {
    formMode = mode;
    editingVenueId = venueId;

    const modal = document.getElementById('venue-form-modal');
    const title = document.getElementById('form-title');
    const submitIcon = document.getElementById('submit-icon');
    const submitText = document.getElementById('submit-text');

    if (mode === 'edit' && venueId) {
      title.innerHTML = '<i data-lucide="edit" class="w-5 h-5"></i> <span>Editar Venue</span>';
      submitIcon.textContent = 'ğŸ’¾';
      submitText.textContent = 'Actualizar';
      fetchVenueData(venueId);
    } else {
      title.innerHTML = '<i data-lucide="plus-circle" class="w-5 h-5"></i> <span>Crear Venue</span>';
      submitIcon.textContent = 'âœ”ï¸';
      submitText.textContent = 'Crear';
      document.getElementById('venue-form').reset();
    }

    modal.classList.remove('hidden');
  }

  function closeVenueForm() {
    document.getElementById('venue-form-modal').classList.add('hidden');
    document.getElementById('venue-form').reset();
    editingVenueId = null;
  }

  async function fetchVenueData(venueId) {
    try {
      const response = await fetch(`/api/venues/${venueId}`);
      const data = await response.json();

      if (data.success) {
        const v = data.venue;
        document.getElementById('venue-name').value = v.name || '';
        document.getElementById('venue-external-url').value = v.external_url || '';
      } else {
        alert('Error cargando venue: ' + (data.error || 'Desconocido'));
      }
    } catch (err) {
      console.error('Error:', err);
      alert('Error cargando datos: ' + err.message);
    }
  }

  async function submitVenueForm(event) {
    event.preventDefault();

    const formData = new FormData(document.getElementById('venue-form'));
    const data = Object.fromEntries(formData);

    const endpoint = formMode === 'edit'
      ? `/api/admin/venues/${editingVenueId}`
      : '/api/admin/venues/manual';

    const method = formMode === 'edit' ? 'PUT' : 'POST';

    const submitBtn = document.querySelector('#venue-form button[type="submit"]');
    submitBtn.disabled = true;
    submitBtn.innerHTML = '<span class="loading-spinner"></span> Guardando...';

    try {
      const response = await fetch(endpoint, {
        method,
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data)
      });

      const result = await response.json();

      if (result.success) {
        alert('âœ… ' + (result.message || 'Guardado correctamente'));
        closeVenueForm();

        // Reload o emit evento personalizado
        if (window.onVenueFormSuccess) {
          window.onVenueFormSuccess(result.venue);
        } else {
          location.reload();
        }
      } else {
        alert('âŒ Error: ' + (result.error || result.message || 'Desconocido'));
      }
    } catch (err) {
      console.error('Error:', err);
      alert('âŒ Error: ' + err.message);
    } finally {
      submitBtn.disabled = false;
      submitBtn.innerHTML = formMode === 'edit'
        ? 'ğŸ’¾ Actualizar'
        : 'âœ”ï¸ Crear';
    }
  }

  // Permitir cerrar modal con ESC
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && !document.getElementById('venue-form-modal').classList.contains('hidden')) {
      closeVenueForm();
    }
  });
</script>

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="theme-color" content="#31713D">
  <title>Propuesta - MICE Catering</title>
  
  <!-- Tailwind CSS -->
  <script src="https://cdn.tailwindcss.com"></script>
  
  <!-- Lucide Icons -->
  <script src="https://cdn.jsdelivr.net/npm/lucide@latest"></script>
  
  <!-- Professional Design System -->
  <link rel="stylesheet" href="/css/professional.css">

  <!-- Global Theme -->
  <link rel="stylesheet" href="/css/theme.css">
  
  <style>
    /* Lucide Icons Styling */
    [data-lucide] {
      width: 1.25rem;
      height: 1.25rem;
      display: inline-block;
      vertical-align: -0.25em;
      stroke: currentColor;
      stroke-width: 2;
      stroke-linecap: round;
      stroke-linejoin: round;
      fill: none;
    }
    
    .icon-sm [data-lucide] {
      width: 1rem;
      height: 1rem;
    }
    
    .icon-md [data-lucide] {
      width: 1.5rem;
      height: 1.5rem;
    }
    
    .icon-lg [data-lucide] {
      width: 2rem;
      height: 2rem;
    }
  </style>
</head>
<body>
  <!-- Header Principal -->
  <header class="brand-bg text-white shadow-lg print:hidden sticky top-0 z-50">
    <div class="max-w-7xl mx-auto px-6 py-4">
      <div class="flex items-center justify-between">
        
        <!-- Logo & Branding Section -->
        <div class="flex items-center space-x-3">
          <img src="/logomice.png" alt="MICE Catering" class="h-8 w-auto" />
          <div>
            <h1 class="text-lg font-bold tracking-tight">MICE CATERING</h1>
            <p class="text-xs opacity-80">Propuestas Profesionales</p>
          </div>
        </div>

        <!-- Help Section (Right) -->
        <div class="flex items-center space-x-4 text-sm">
          <div class="hidden md:block text-right opacity-90">
            <p class="font-medium">¿Necesitas ayuda?</p>
            <p class="text-xs opacity-75">Contacta con tu comercial vía chat</p>
          </div>
          <div data-lucide="message-circle" class="icon-md text-white opacity-80"></div>
        </div>

      </div>
    </div>
  </header>
  
  <!-- Initialize Lucide Icons -->
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      lucide.createIcons();
    });
  </script>

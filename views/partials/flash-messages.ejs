<!-- Flash Messages (Success, Error, Info) -->
<% if (success_msg && success_msg.length > 0) { %>
    <% success_msg.forEach(msg => { %>
    <div class="bg-green-50 border border-green-200 rounded-lg p-4 mb-4 flex items-start gap-3 animate-fadeIn print:hidden">
        <span class="text-green-600 font-bold">✓</span>
        <div class="flex-1">
            <h3 class="font-semibold text-green-900">Éxito</h3>
            <p class="text-sm text-green-700"><%= msg %></p>
        </div>
        <button class="text-green-600 hover:text-green-700" onclick="this.parentElement.remove();">✕</button>
    </div>
    <% }) %>
<% } %>

<% if (error_msg && error_msg.length > 0) { %>
    <% error_msg.forEach(msg => { %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-4 flex items-start gap-3 animate-fadeIn print:hidden">
        <span class="text-red-600 font-bold">!</span>
        <div class="flex-1">
            <h3 class="font-semibold text-red-900">Error</h3>
            <p class="text-sm text-red-700"><%= msg %></p>
        </div>
        <button class="text-red-600 hover:text-red-700" onclick="this.parentElement.remove();">✕</button>
    </div>
    <% }) %>
<% } %>

<% if (info_msg && info_msg.length > 0) { %>
    <% info_msg.forEach(msg => { %>
    <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-4 flex items-start gap-3 animate-fadeIn print:hidden">
        <span class="text-blue-600 font-bold">ℹ</span>
        <div class="flex-1">
            <h3 class="font-semibold text-blue-900">Información</h3>
            <p class="text-sm text-blue-700"><%= msg %></p>
        </div>
        <button class="text-blue-600 hover:text-blue-700" onclick="this.parentElement.remove();">✕</button>
    </div>
    <% }) %>
<% } %>

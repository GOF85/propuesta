<!-- Global Theme -->
<link rel="stylesheet" href="/css/theme.css">

<!-- Navbar / Header -->
<nav class="bg-white border-b border-gray-200 px-6 py-3 flex justify-between items-center sticky top-0 z-50 print:hidden">
    <div class="flex items-center gap-4">
        <a href="/dashboard" class="flex items-center gap-2 text-decoration-none">
            <img src="/logomice.png" alt="MICE Catering" class="h-8 w-auto" />
            <div class="text-xl font-bold text-gray-800 tracking-tight">MICE CATERING</div>
            <span class="px-2 py-1 bg-gray-100 rounded text-xs text-gray-500">v1.0</span>
        </a>
    </div>
    
    <div class="flex items-center gap-4">
        <!-- Admin Dropdown (only for admins) -->
        <% if (user && user.role === 'admin') { %>
        <div class="relative group">
            <a href="/admin" class="px-4 py-2 bg-gradient-to-r from-amber-500 to-orange-500 text-white rounded-lg hover:shadow-lg transition text-sm font-semibold flex items-center gap-2 print:hidden">
                <i data-lucide="settings" class="w-4 h-4"></i>
                <span>Admin</span>
                <i data-lucide="chevron-down" class="w-4 h-4"></i>
            </a>
            <!-- Dropdown Menu -->
            <div class="hidden group-hover:block absolute right-0 mt-2 w-56 bg-white border border-gray-200 rounded-lg shadow-xl z-50">
                <div class="py-2">
                    <a href="/admin" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 flex items-center">
                        <i data-lucide="bar-chart-3" class="w-4 h-4 mr-2"></i>Dashboard Admin
                    </a>
                    <div class="border-t border-gray-100 my-1"></div>
                    <a href="/admin/venues" class="block px-4 py-2 text-sm text-gray-700 hover:bg-blue-50 flex items-center">
                        <i data-lucide="building-2" class="w-4 h-4 mr-2"></i>Gestión de Venues
                    </a>
                    <a href="/admin/dishes" class="block px-4 py-2 text-sm text-gray-700 hover:bg-green-50 flex items-center">
                        <i data-lucide="utensils" class="w-4 h-4 mr-2"></i>Gestión de Platos
                    </a>
                    <a href="/admin/services" class="block px-4 py-2 text-sm text-gray-700 hover:bg-purple-50 flex items-center">
                        <i data-lucide="target" class="w-4 h-4 mr-2"></i>Gestión de Servicios
                    </a>
                </div>
            </div>
        </div>
        <% } %>

        <!-- My Proposals Button (for logged in users) -->
        <% if (user && user.role !== 'admin') { %>
        <a href="/my-proposals" class="px-4 py-2 bg-gradient-to-r from-blue-500 to-blue-600 text-white rounded-lg hover:shadow-lg transition text-sm font-semibold flex items-center gap-2 print:hidden">
            <i data-lucide="clipboard-list" class="w-4 h-4"></i>
            <span class="hidden md:inline">Mis Propuestas</span>
        </a>
        <% } %>

        <!-- Search (Commercial only) -->
        <% if (user && user.role === 'commercial') { %>
        <div class="relative hidden md:block">
            <input 
                type="text" 
                placeholder="Buscar cliente, venue..." 
                class="pl-10 pr-4 py-2 border rounded-lg text-sm w-64 focus:ring-2 focus:ring-blue-500 focus:outline-none"
                id="global-search"
            >
            <span class="absolute left-3 top-2.5 text-gray-400">
                <i data-lucide="search" class="w-4 h-4"></i>
            </span>
        </div>
        <% } %>
        
        <!-- User Menu -->
        <% if (user) { %>
        <div class="flex items-center gap-3 border-l border-gray-200 pl-4">
            <img 
                src="https://ui-avatars.com/api/?name=<%= user.name %>&background=0D8ABC&color=fff" 
                class="w-8 h-8 rounded-full"
                alt="<%= user.name %>"
            >
            <div class="hidden md:block">
                <div class="text-sm font-medium text-gray-700"><%= user.name %></div>
                <div class="text-xs text-gray-500"><%= user.role === 'admin' ? 'Administrador' : 'Comercial' %></div>
            </div>
            <a href="/logout" class="text-gray-400 hover:text-gray-600 ml-2" title="Cerrar sesión">
                <i data-lucide="log-out" class="w-4 h-4"></i>
            </a>
        </div>
        <% } else { %>
        <div class="flex items-center gap-2">
            <a href="/login" class="text-blue-600 hover:text-blue-700 font-medium text-sm">Iniciar sesión</a>
        </div>
        <% } %>
    </div>
</nav>

        <p class="text-3xl font-bold text-gray-900 mb-2">#<%= proposal.id %></p>
        <p class="text-sm text-gray-600">
          <span class="font-semibold"><%= proposal.client_name %></span>
        </p>
      </div>

      <!-- Progress Indicator -->
      <div class="mb-8">
        <p class="text-xs text-gray-500 mb-3 font-medium">Progreso de cambios</p>
